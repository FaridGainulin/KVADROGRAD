.city-section
  background: radial-gradient(134.91% 187.18% at 71.22% -83.08%, #f22222 0%, #8c1414 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0 15px
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 50px 0 30px
    +above($breakpoints.xxl)
      padding 99px 0 43px

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 15px 0
    +above($breakpoints.sm)
      padding 30px 0 20px
    +above($breakpoints.md)
      padding 40px 0 25px
    +above($breakpoints.xxl)
      padding 55px 0 30px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    margin-bottom 40px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 12px
      margin-bottom 50px
    +above($breakpoints.md)
      gap: 16px
      margin-bottom 70px
    +above($breakpoints.xxl)
      gap: 20px
      margin-bottom 99px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 290px !important
      +above($breakpoints.xxl)
        width 320px !important
