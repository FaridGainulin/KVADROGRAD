.details-section
  background: radial-gradient(110% 83.94% at 23.75% 20.27%, #f5f5f5 0%, #f0f0f0 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 100px 0 93px

  &__block
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 20px
    +above($breakpoints.sm)
      gap: 0
      flex-direction: row
      align-items: flex-start
      justify-content space-between

  &__block-left,
  &__block-right
    width 100%
    +above($breakpoints.sm)
      width 363px
    +above($breakpoints.md)
      width 473px
    +above($breakpoints.xxl)
      width 580px

  &__block-left
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      flex-direction: column
      align-items: flex-start
      gap: 90px
      margin-top 5px
    +above($breakpoints.md)
      gap: 110px
      margin-top 7px
    +above($breakpoints.xxl)
      gap: 128px
      margin-top 9px

  &__img-wrapper
    position relative
    background: linear-gradient(180deg, #f22222 0%, #c41c1c 100%);
    width 220px
    aspect-ratio: 480 / 539
    +above($breakpoints.sm)
      width 310px
    +above($breakpoints.md)
      width 400px
    +above($breakpoints.xxl)
      width 480px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color #E1E1E1
      width: 70px;
      height: 95px;
      bottom: -10px;
      left: -30px;
      +above($breakpoints.sm)
        width: 72px;
        height: 128px;
        bottom: -38px;
        left: -20px;
      +above($breakpoints.md)
        width: 95px;
        height: 170px;
        bottom: -53px;
        left: -25px;
      +above($breakpoints.xxl)
        width 110px
        height: 204px
        bottom: -64px
        left: -30px

  &__img
    position: absolute
    width 250px
    height: auto
    bottom: 0
    left: 10px
    +above($breakpoints.sm)
      width: 350px;
      left: 12px;
    +above($breakpoints.md)
      width 450px
      left: 18px
    +above($breakpoints.xxl)
      width 550px

  &__title,
  &__sub-title,
  &__text
    color: $color-carbon
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__text
    border-left: 3px solid $color-carbon
    padding-left 10px
    +above($breakpoints.sm)
      padding-left 15px
      border-left: 7px solid $color-carbon
    +above($breakpoints.md)
      padding-left 25px
      border-left: 9px solid $color-carbon
    +above($breakpoints.xxl)
      padding-left 36px
      border-left: 11px solid $color-carbon

  &__sub-title
    padding 7px 0 15px
    +above($breakpoints.sm)
      padding 12px 0 30px
    +above($breakpoints.md)
      padding 16px 0 40px
    +above($breakpoints.xxl)
      padding 20px 0 50px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 24px

  &__card
    width 280px !important
    color: rgba(11, 10, 10, 0.7)
    display: flex
    align-items: flex-start
    gap: 16px
    +above($breakpoints.sm)
      width max-content !important
      gap: 10px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 15px

  &__card-dot
    flex-shrink: 0
    width 5px
    height: 5px
    border-radius: 50%
    background-color rgba(11, 10, 10, 0.7)
    margin-top 5px
    +above($breakpoints.sm)
      width 3px
      height: 3px
      margin-top 7px
    +above($breakpoints.md)
      margin-top 9px
    +above($breakpoints.xxl)
      margin-top 11px

  &__form
    display: flex
    flex-direction: column
    gap: 8px
    width 280px
    margin 0 auto
    +above($breakpoints.sm)
      width 100%
      margin 0
      margin-top 30px
      gap: 12px
    +above($breakpoints.md)
      margin-top 40px
      gap: 16px
    +above($breakpoints.xxl)
      margin-top 50px
      gap: 20px

  &__input-group
    width 100%
    display: flex
    flex-direction: column
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px
