.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #D71D1C
  position relative
  z-index 1
  &:after
    content: ""
    position: absolute
    z-index -1
    background-color $color-carbon
    left: 0
    width: 6px;
    height: 73px;
    top: 133px;
    +above($breakpoints.sm)
      width: 19px;
      height: 156px;
      top: 143px;
    +above($breakpoints.md)
      width: 25px;
      height: 218px;
      top: 175px;
    +above($breakpoints.xxl)
      width 56px
      height: 271px
      top: 216px

  &__container
    position relative
    z-index 1
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 50px
    +above($breakpoints.xxl)
      padding-bottom 94px

