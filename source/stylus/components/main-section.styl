  &__form
    display: flex
    flex-direction: column
    gap: 8px
    width 280px
    margin 15px auto 0
    +above($breakpoints.sm)
      gap: 12px
      width 220px
      margin 0
      margin-top 20px
    +above($breakpoints.md)
      gap: 14px
      width 290px
      margin-top 25px
    +above($breakpoints.xxl)
      gap: 17px
      width 320px
      margin-top 30px

  &__img
    width: 253px;
    height: auto;
    margin: 13px 0 0 2px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      bottom: 0;
      width: 516px;
      right: -16px;
    +above($breakpoints.md)
      width: 675px;
    +above($breakpoints.xxl)
