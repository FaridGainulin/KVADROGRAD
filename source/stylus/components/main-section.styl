    background-size: 1px 1px, calc(100% - 2px) 2px, 1px 1px, 2px calc(100% - 2px);
    background-position: top left,top center,top right,center right, bottom right,bottom center,bottom left,center left;
    background-repeat: no-repeat;
    display: flex
    flex-direction: column
    gap: 10px
    width 100%
    padding 15px 1px
    margin 20px 0 15px
    +above($breakpoints.sm)
      background-image: radial-gradient(circle at 100% 100%, transparent -2px, #ffffff -2px, #ffffff 1px, transparent 1px), linear-gradient(to right, #ffffff, #f1a4a3), radial-gradient(circle at 0% 100%, transparent -2px, #f1a4a3 -2px, #f1a4a3 1px, transparent 1px), linear-gradient(to bottom, #f1a4a3, #e45252), radial-gradient(circle at 0% 0%, transparent -2px, #e45252 -2px, #e45252 1px, transparent 1px), linear-gradient(to left, #e45252, #ffffff), radial-gradient(circle at 100% 0%, transparent -2px, #ffffff -2px, #ffffff 1px, transparent 1px), linear-gradient(to top, #ffffff, #ffffff);
      background-size: 1px 1px, calc(100% - 2px) 3px, 1px 1px, 3px calc(100% - 2px);
      gap: 13px
      width 430px
      padding 20px
      margin 25px 0 30px
    +above($breakpoints.md)
      background-image: radial-gradient(circle at 100% 100%, transparent -3px, #ffffff -3px, #ffffff 1px, transparent 1px), linear-gradient(to right, #ffffff, #f1a4a3), radial-gradient(circle at 0% 100%, transparent -3px, #f1a4a3 -3px, #f1a4a3 1px, transparent 1px), linear-gradient(to bottom, #f1a4a3, #e45252), radial-gradient(circle at 0% 0%, transparent -3px, #e45252 -3px, #e45252 1px, transparent 1px), linear-gradient(to left, #e45252, #ffffff), radial-gradient(circle at 100% 0%, transparent -3px, #ffffff -3px, #ffffff 1px, transparent 1px), linear-gradient(to top, #ffffff, #ffffff);
