.reasons-section
  background: radial-gradient(70.6% 41.23% at 11.17% 37.23%, #f5f5f5 0%, #f0f0f0 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0 310px
    +above($breakpoints.sm)
      padding 50px 0
    +above($breakpoints.md)
      padding 70px 0
    +above($breakpoints.xxl)
      padding 100px 0 92px
    &:after
      content: ""
      position: absolute
      z-index -1
      background: linear-gradient(138deg, #f22222 0%, #8c1414 100%);
      width: 100vw;
      top: 10px;
      right: 10px;
      height: 195px;
      +above($breakpoints.sm)
        height: 490px;
        top: 0;
        right: 255px;
      +above($breakpoints.md)
        height: 660px;
        right: 328px;
      +above($breakpoints.xxl)
        height: 850px
        right: 380px

  &__title,
  &__sub-title,
  &__bottom
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 20px 0 30px
    +above($breakpoints.md)
      padding 25px 0 40px
    +above($breakpoints.xxl)
      padding 30px 0 52px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 15px
    +above($breakpoints.md)
      gap: 18px
    +above($breakpoints.xxl)
      gap: 22px

  &__card
    width 280px !important
    display: flex
    align-items: flex-start
    gap: 10px
    +above($breakpoints.sm)
      width max-content !important
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px

  &__card-icon
    flex-shrink: 0
    position relative
    z-index 1
    background-color #232323
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 11px
      height: 11px
    +above($breakpoints.md)
      width 12px
      height: 12px
    +above($breakpoints.xxl)
      width 13px
      height: 13px
    &:after
      content: ""
      position: absolute
      width 85%
      height: 85%
      background-color transparent
      border: 1px solid #fff
      bottom: 40%
      left: 40%

  &__bottom
    color: rgba(11, 10, 10, 0.8)
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 20px
      margin-top 60px
    +above($breakpoints.md)
      gap: 25px
      margin-top 90px
    +above($breakpoints.xxl)
      gap: 30px
      margin-top 156px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 290px !important
      +above($breakpoints.xxl)
        width 320px !important

  &__img-wrapper
    position absolute
    z-index 2
    top: 485px;
    right: 44px;
    +above($breakpoints.sm)
      top: 70px
      right: 0
    +above($breakpoints.md)
      top: 100px
    +above($breakpoints.xxl)
      top: 147px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-carbon
      width: 20px;
      height: 81px;
      top: -16px;
      left: -10px;
      +above($breakpoints.sm)
        width: 30px;
        height: 130px;
        top: -30px;
        left: -15px;
      +above($breakpoints.md)
        width: 36px;
        height: 155px;
        top: -35px;
        left: -20px;
      +above($breakpoints.xxl)
        width 36px
        height: 200px
        top: -47px
        left: -20px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #E1E1E1
      width: 52px;
      height: 53px;
      bottom: -20px;
      right: -20px;
      +above($breakpoints.sm)
        width: 82px;
        height: 88px;
        bottom: -35px;
        right: -30px;
      +above($breakpoints.md)
        width: 106px;
        height: 117px;
        bottom: -59px;
        right: -40px;
      +above($breakpoints.xxl)
        width 130px
        height: 160px
        bottom: -84px
        right: -50px

  &__img
    width 220px
    height: auto
    +above($breakpoints.sm)
      width 348px
    +above($breakpoints.md)
      width 453px
    +above($breakpoints.xxl)
      width 560px
