.info-section
  background: radial-gradient(70.6% 41.23% at 11.17% 37.23%, #f5f5f5 0%, #f0f0f0 100%);

  &__container
    position relative
    z-index 1
    padding 20px 0 300px
    +above($breakpoints.sm)
      padding 40px 0
    +above($breakpoints.md)
      padding 60px 0
    +above($breakpoints.xxl)
      padding 100px 0 109px

  &__title,
  &__sub-title
    text-align: center
    color: $color-carbon
    +above($breakpoints.sm)
      text-align: start

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 15px 0 20px
    +above($breakpoints.md)
      padding 20px 0 30px
    +above($breakpoints.xxl)
      padding 30px 0 40px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 12px
    +above($breakpoints.md)
      gap: 16px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    width 280px !important
    color: rgba(11, 10, 10, 0.8)
    display: flex
    align-items: flex-start
    gap: 7px
    +above($breakpoints.sm)
      width max-content !important
      gap: 10px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 15px

  &__card-dot
    flex-shrink: 0
    width 5px
    height: 5px
    border-radius: 50%
    background-color rgba(11, 10, 10, 0.8)
    margin-top 5px
    +above($breakpoints.sm)
      width 4px
      height: 4px
      margin-top 4px
    +above($breakpoints.md)
      margin-top 7px
    +above($breakpoints.xxl)
      margin-top 9px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 8px
    +above($breakpoints.sm)
      flex-direction: row
      gap: 12px
      margin-top 30px
    +above($breakpoints.md)
      gap: 16px
      margin-top 50px
    +above($breakpoints.xxl)
      gap: 20px
      margin-top 75px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 220px !important
      +above($breakpoints.md)
        width 290px !important
      +above($breakpoints.xxl)
        width 320px !important

  &__img-wrapper
    position: absolute
    background: linear-gradient(121deg, #f22222 0%, #8c1414 100%);
    aspect-ratio: 459 / 541
    width: 205px;
    top: 370px;
    right: 52px;
    +above($breakpoints.sm)
      width: 260px;
      top: 80px;
      right: 0px;
    +above($breakpoints.md)
      width: 365px;
      top: 110px;
      right: 10px;
    +above($breakpoints.xxl)
      width 459px
      top: 163px
      right: 100px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-carbon
      width: 20px;
      height: 85px;
      top: -20px;
      left: -10px;
      +above($breakpoints.sm)
        width: 24px;
        height: 107px;
        top: -40px;
        left: -12px;
      +above($breakpoints.md)
        width: 30px;
        height: 158px;
        top: -60px;
        left: -17px;
      +above($breakpoints.xxl)
        width 36px
        height: 200px
        top: -80px
        left: -21px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #E1E1E1
      width: 56px;
      height: 57px;
      bottom: -16px;
      right: -40px;
      +above($breakpoints.sm)
        width: 70px;
        height: 83px;
        bottom: -30px;
        right: -50px;
      +above($breakpoints.md)
        width: 100px;
        height: 134px;
        bottom: -50px;
        right: -70px;
      +above($breakpoints.xxl)
        width 130px
        height: 160px
        bottom: -63px
        right: -98px

  &__img
    position: absolute
    height: auto
    bottom: 0
    right: 0
    width 280px
    +above($breakpoints.sm)
      width 360px
    +above($breakpoints.md)
      width 505px
    +above($breakpoints.xxl)
      width 629px
